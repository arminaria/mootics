<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<MenuBar layoutX="0" layoutY="0" scaleX="1" xmlns:fx="http://javafx.com/fxml" prefHeight="25"
         fx:controller="de.tu.berlin.control.Navigation">

    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="import" onAction="#gotoImportData"/>
                <SeparatorMenuItem mnemonicParsing="false" />
                <!--<MenuItem mnemonicParsing="false" text="clear database" onAction="#showModalWindow"/>-->
                <MenuItem mnemonicParsing="false" text="Close" onAction="#close"  />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Manage">
            <items>

                <MenuItem mnemonicParsing="false" text="Show Data"  onAction="#gotoShowData" />
                <MenuItem mnemonicParsing="false" text="Show Content" onAction="#gotoContent" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Info">
            <items>
                <MenuItem mnemonicParsing="false" text="About" />
            </items>
        </Menu>
    </menus>
</MenuBar>