<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<MenuBar layoutX="0" layoutY="0" scaleX="1" xmlns:fx="http://javafx.com/fxml" prefHeight="25"
         fx:controller="de.tu.berlin.control.Navigation">

    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="import" onAction="#gotoImportData"/>
                <MenuItem mnemonicParsing="false" text="import grades" onAction="#gotoImportGrades"/>
                <MenuItem mnemonicParsing="false" text="update Lectures" onAction="#UpdateLectures" disable="true" />
                <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" text="backup" onAction="#createBackup"/>
                <SeparatorMenuItem mnemonicParsing="false" />

                <MenuItem mnemonicParsing="false" text="Close" onAction="#close"  />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Show">
            <items>
                <MenuItem mnemonicParsing="false" text="Show Chart"  onAction="#gotoShowChart" />
                <MenuItem mnemonicParsing="false" text="Show Data"  onAction="#gotoShowData" />
                <MenuItem mnemonicParsing="false" text="Show Grades" onAction="#gotoShowGrades" />
                <MenuItem mnemonicParsing="false" text="Show Data"  onAction="#showInfo" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Manage">
            <items>
                <MenuItem mnemonicParsing="false" text="Show Day of Usage"  onAction="#gotoShowDayOfUsage" />
                <MenuItem mnemonicParsing="false" text="Show Content" onAction="#gotoContent" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Info">
            <items>
                <MenuItem mnemonicParsing="false" text="About" />
            </items>
        </Menu>
    </menus>
</MenuBar>